FROM node:10

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm install

COPY . .

EXPOSE 3000

ENV INFINIUM_PORT=3000
ENV INFINIUM_DATA="/data/"
#ENV INFINIUM_API_ENABLED
#ENV INFINIUM_FORWARD_INTERVAL
#ENV INFINIUM_WEATHER_REFRESH_RATE
ENV INFINIUM_DEBUG_MODE=true


CMD [ "node", "launch.js" ]
